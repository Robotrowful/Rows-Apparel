<Defs>
	<!--Devotes-->
<ThingDef ParentName="RowsApparelHats">
	<defName>Rows_Apparel_DevoteVeil</defName>
	<label>Devotes Veil</label>
	<description>A Veil for the ones Devotes to attune with their beliefs</description>
	<graphicData>
		<texPath>Things/RowsApparel/Hats/Devote</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
	</graphicData>
	<uiIconPath>Things/RowsApparel/Preview/DevoteVeil</uiIconPath>
	<apparel>
		<wornGraphicPath>Things/RowsApparel/Hats/Devote</wornGraphicPath>
		<useWornGraphicMask>true</useWornGraphicMask>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<layers>
			<li>Overhead</li>
		</layers>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<costStuffCount>30</costStuffCount>
	<statBases>
		<WorkToMake>500</WorkToMake>
		<Mass>0.2</Mass>
		<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>1</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<PsychicSensitivity>0.1</PsychicSensitivity>
	</equippedStatOffsets>
</ThingDef>
	
